<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vahitdurmuss.employeeshuttle.Shuttle.ShuttleMainActivity"
    android:background="@color/employeeshuttle_background">


    <ImageView
        android:id="@+id/shuttleImageViewIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/emashuttle"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="10dp"

        />
    <TextView
        android:id="@+id/shuttlePlateTextView"
        android:layout_width="100dp"
        android:layout_height="23dp"
        android:text="PLAKA"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_below="@+id/shuttleImageViewIcon"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        />
    <Button
        android:id="@+id/logOutShttle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ÇIKIŞ YAP"
        android:layout_alignParentRight="true"

        />





</RelativeLayout>
